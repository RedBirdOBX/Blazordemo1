<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3">
            <h4>@Employee.FirstName @Employee.LastName</h4>
        </div>
        <div class="card-body employee-card text-center">
            <div class="mb-3">

                @* pulling from obj and db *@
                @* <img src="@Employee.ImageName" class="employee-img rounded-circle img-fluid" /> *@

                <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{Employee.EmployeeId}.jpg")" class="img-fluid rounded-circle employee-detail-img" />

            </div>
            <button class="btn btn-primary btn-sm mb-1"
                @onclick="@(async () => await EmployeeQuickViewClickedFromCard.InvokeAsync(Employee))">
                Quick View
            </button>

            @*link*@
            <a href="@($"employeedetail/{Employee.EmployeeId}")"
                class="btn btn-outline-primary btn-sm">
                Full Details (simple)
            </a>

            @* button *@
            <button class="btn btn-outline-warning btn-sm"
                @onclick="(() => NavigateToDetails(Employee))">
                Full Details (code)
            </button>

            <a href="@($"employeeedit/{Employee.EmployeeId}")"
                class="btn btn-outline-primary">
                Edit Details
            </a>

        </div>
    </div>
</div>

